<Window x:Class="Tarneeb.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarneeb"
        mc:Ignorable="d"
        Title="StartWindow" Height="400" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Label>Would you like to play a game of Tarneeb?</Label>
        <Button Height="45">Start New Game</Button>
        <Button Height="45" Margin="0,245,0,94">Exit</Button>
    </Grid>
</Window>
